<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" /> <!-- Sudut tombol tidak bulat -->
            <solid android:color="@android:color/transparent" /> <!-- Latar belakang transparan -->
        </shape>
    </item>
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Warna latar belakang tombol -->
        </shape>
    </item>
</layer-list>
